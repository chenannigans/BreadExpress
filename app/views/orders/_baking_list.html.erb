<div class="row">
  <div class="col s6 offset-s3">
    <div class="card #fdfbd5">
      <table class="bordered hoverable ">

        <%if @bread_baking_list.empty?%>
            <h4>No bread to be baked</h4>
            <%else%>

        <h4>Bread List</h4>

        <thead>
          <tr>
            <th width= "80%">Item</th>
            <th >Quantity</th>
          </tr>
        </thead>
            
        <tbody>
          <% for item in @bread_baking_list %>
            <tr>
              <td><%= item[0] %></td>
              <td><%= item[1] %></td>
              <%end%>
            </tr>
            
        </tbody>

              <%end%>
      </table>



    </div>
  </div>
</div>

