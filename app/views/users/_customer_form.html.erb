

<%= simple_nested_form_for @customer do |customer_form| %>

 <% if @customer.errors.any? %>
  
      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>

  <% end %>
<div class = "row">
  <div class = "s8 m12">

  <fieldset>
    <legend><%= controller.action_name.capitalize %> Customer</legend>
      <%= render :partial => "customer_fields", :locals => { :f => customer_form } %>
  </fieldset>
</div>

<div class = "s6 m12">
  <legend>Associated user?</legend>

    <%= customer_form.simple_fields_for :user do |user_form| %>
    Hello
    <%= render :partial => "user_fields", :locals => {:f => user_form } %>
    <% end %>

  
  </div>
</div>

    <div class="form-actions">
      <%= customer_form.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', customers_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>