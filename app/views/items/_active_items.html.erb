
Available Items

<% if @active_items.empty? %>
  <h4>No active items at this time.</h4>
<% else %>
  <h4> Items</h4>
  <table class="table-striped ">
    <thead>
      <tr>
        <th width="100">Name</th>
        <th width="100">Price</th>
        <th width="100">Units</th>
        <th width="100">Add to cart </th>
        <th width="100">Edit</th>
<!--         <th width="250">Items</th>
        <th width="100">Cost</th> -->
      </tr>
    </thead>
    <tbody>
      <% @active_items.each do |item| %>
        <tr>
      
          <td><%=link_to item.name, item_path(item) %><br /> </td>
         
<!--          watch out for nil

 -->          
        <%if !(item.current_price.nil?) %>
        <td>$<%=("%.2f" % item.current_price) %></td>
        <%else%>
        <td><%="Not price set"%></td>

        <%end%>



         <% if (item.category == "bread") %>
                 <td>  <%= item.units_per_item.to_s + " " + "loaf" %></td>
              <%else%>
                 <td>  <%= item.units_per_item.to_s + " " + item.category %></td>
                 <%end%>

                    <td><%=link_to "add to cart", add_to_cart_path(item.id)%> <td> 
                <td><%= link_to(edit_item_path(item), class: 'button tiny radius warning') do %>
            &nbsp;Edit&nbsp;</td>
            <%end%>
        


        </tr>

      
        
      <% end %>
    </tbody>
  </table>
  <% end %>
  <%= will_paginate @active_items, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>  


