 

 <div class="row">
        <div class="col s10 offset-s1">
          

          <% if current_user.role?(:admin)%>  
              <%if @active_items.empty?%>
                  <h4> No active items at this time </h4>

                  <%end%>
                  <%end%>




        <div class = "row">  <h4>Bread Express Catalogue</h4>
          <% if current_user.role?(:admin)%>  
   
          <a class="waves-effect waves-dark btn red darken-4 left" <%= link_to 'New Item', new_item_path %> </a>
           <%end%>

        </div>


<% for item in @active_items %>

   

 <div class = "row">

            <div class = "col s3">


               <div class="card itemcard2">
                  <div class="card-image waves-effect waves-block waves-light">
                      <div class="activator card-image">

                          <% if item.picture_url.nil? %>
                          <div id = "picformat2">
                              <img src = "http://upload.wikimedia.org/wikipedia/commons/a/ac/No_image_available.svg">
                            </div>

                          <%else%>
                          <div id = "picformat2">
                                <%= image_tag item.picture_url %>
                               </div>
                          <% end %>   
                      </div>
                    </div>
                      
                      <div class="card-content">

                  <span class="card-title activator grey-text text-darken-4"><%=item.name%><i class="mdi-navigation-more-vert right"></i></span>
                  <p><%= link_to "Details", item_path(item) %>
                      </div>
                <div class="card-reveal">
                  <span class="card-title grey-text text-darken-4">Description<i class="mdi-navigation-close right"></i></span>
                  <p><%=item.description%></p>
                </div>
                </div>
              </div>
         



  <%end%>
  <div class = "row">
  <%= will_paginate @active_items, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>  
</div>
</div>




  
