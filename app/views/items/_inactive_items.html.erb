 

 <div class="row">
        <div class="col s10 offset-s1">
          <h4>Inactive Items </h4>

          <% if current_user.nil? || current_user.role?(:admin)%>  
              <%if @inactive_items.empty?%>
                  <h4> No inactive items at this time </h4>

                  <%end%>
                  <%end%>



<% for item in @inactive_items %>

   

 <div class = "row">

            <div class = "col s4">


               <div class="card itemcard2">
                  <div class="card-image waves-effect waves-block waves-light">
                      <div class="activator card-image">

                          <% if item.picture_url.nil? %>
                          <div id = "picformat2">
                              <img src = "http://upload.wikimedia.org/wikipedia/commons/a/ac/No_image_available.svg">
                            </div>

                          <%else%>
                          <div id = "picformat2">
                                <%= image_tag item.picture_url %>
                               </div>
                          <% end %>   
                      </div>
                    </div>
                      
                      <div class="card-content">

                  <span class="card-title activator grey-text text-darken-4"><%=item.name%><i class="mdi-navigation-more-vert right"></i></span>
                  <p><%= link_to "Details", item_path(item) %>
                      </div>
                <div class="card-reveal">
                  <span class="card-title grey-text text-darken-4">Description<i class="mdi-navigation-close right"></i></span>
                  <p><%=item.description%></p>
                </div>
                </div>
              </div>
         




  <div class = "row">
  <%= will_paginate @inactive_items, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>  
</div>
  <%end%>
</div>
</div>



