 <div class="row">
        <div class="col s8 offset-s2">
            <div class="card-content black-text">

<%= simple_form_for(@item, :html => { :multipart => true}) do |f| %>

 <% if @item.errors.any? %>
  
      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>

  <% end %>
  <fieldset>
 <h4><%= controller.action_name.capitalize %> Item</h4>


  
      <div class="input-field col s12">

    <%= f.label :name %><br />
    <%= f.text_field :name %>
 
</div>

   

    <%= f.label :picture %><br />
    <%= f.file_field :picture %>

 


    <div class="input-field col s12">

    <%= f.label :description %><br />
    <%= f.text_area :description %>
    </div>


    <div class="input-field col s12">

    <%= f.label :category %><br />
    <%= f.select :category, Item::CATEGORIES, :prompt => "Select ..." %>
    </div>

 
    <div class="input-field col s12">

    <%= f.label :units_per_item, "Units Per Item" %><br />
    <%= f.text_field :units_per_item %>
    </div>


    <div class="input-field col s12">

    <%= f.label :weight %><br />
    <%= f.text_field :weight%>
    </div>


    <div class="input-field col s12">

<%=f.check_box :active %>
<%=f.label :active %>
    </div>

    <div class="input-field col s12 row">

     <div class="actions">
    <%= f.submit %>
  </div>



    </div>
  </fieldset>
<% end %>
</div>
</div>
</div>