
<div class="row">
  <div class="col s6 offset-s3">
    <div class="card #fdfbd5">
      <table class="bordered hoverable ">

 <h4>Price History</h4> <br>

  	<tr>
	<th>End Date</th>
	<th>Price</th>
</tr>
  
  <% for price in @prices %>
  	<tr>

  		 <% if price.end_date == nil %>
		<td>Current</td>
	  	<td>$<%= ("%.2f" % price.price) %></td>
	  	<%else%>
	  	<td><%= price.end_date.to_s =%></td> 
	  
	  	<td>$<%= ("%.2f" % price.price) %></td>


	  	<td><% link_to "Edit", edit_item_path(price)%></td>

	<%end%>
          </tr>
 

          	<%end%>         
          </table>
</div>
</div>
</div>
</div>