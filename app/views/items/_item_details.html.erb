 <div class="row">
        <div class="col s8 offset-s2">

<%if current_user.role?(:admin)%>

  <a class="waves-effect waves-dark btn red darken-4 right" <%= link_to 'EDIT', edit_item_path(@item) %> </a>
  <%end%>

<div class = " col s6">

<div id = "picformat">
  <% if @item.picture_url.nil? %>
   <p><%= image_tag "http://upload.wikimedia.org/wikipedia/commons/a/ac/No_image_available.svg"%>

  <%else%>
    <p><%= image_tag @item.picture_url, size: "300x300" %></p>
  <% end %>

</div>
</div>

   <div class="row col s6">

<h3><%= @item.name%></h3>

<h4><%= number_to_currency @item.current_price %></h4>

