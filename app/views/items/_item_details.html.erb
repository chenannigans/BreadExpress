          <% if current_user.role?(:admin) || current_user.role?(:customer) %>
          <p><div class = "row right">
           <a class="waves-effect waves-dark btn red darken-4 right"<%=link_to "add to cart", add_to_cart_path(@item.id), :method => :post%></a> <td> </p>
