 <div class="row">
        <div class="col s8 offset-s2">
            <div class="card-content black-text">

              <h4>New Customer </h4>
<%= simple_nested_form_for @customer, :html  => { :class => 'form-horizontal' } do |customer_form| %>

 <% if @customer.errors.any? %>
  
      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>

  <% end %>
<div class = "row">
  <div class = "col s12">
  <fieldset>
    <h5>Please enter your contact information</h5>

   
      <%= render :partial => "customer_fields", :locals => { :f => customer_form } %>
  



<div class = "col s12">

  <h5>Create a log in account below.</h5>
</br>
    <%= customer_form.simple_fields_for :user do |user_form| %>

    <%= render :partial => "user_fields", :locals => {:f => user_form } %>
    <% end %>

  
  </div>

  </fieldset>
</div>


</div>

    <div class="form-actions">
      <%= customer_form.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', customers_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>
</div>
</div>
</div>
